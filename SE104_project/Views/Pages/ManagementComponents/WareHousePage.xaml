                    </ComboBox>
                </Grid>
            </StackPanel>-->
            <Border
                        CornerRadius="4,4,0,0"
                        BorderThickness="1"
                        Grid.Row="1" 
                        Margin="20,0"
                        Height="40" 
                        VerticalAlignment="Top" 
                        BorderBrush="{StaticResource WordBlueBrush}" 
                        Background="{StaticResource WordBlueBrush}" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1.1*" />
                        <ColumnDefinition Width="1.1*" />
                        <ColumnDefinition Width="1.1*" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="Mã hàng" 
                        Grid.Column="0"
                        Style="{StaticResource TitleText}" Margin="10,0,0,0"/>
                    <TextBlock
                        Text="Hàng hóa" 
                        Grid.Column="1"
                        Style="{StaticResource TitleText}"
                        HorizontalAlignment="Left"
                        Margin="20,0,0,0"/>
                    <TextBlock                        
                        Text="Số lượng"                                 
                        Grid.Column="2"
                        Style="{StaticResource TitleText}" HorizontalAlignment="Left" />
                    <TextBlock
                        Text="Vốn tồn kho"                                
                        Grid.Column="3"
                        Style="{StaticResource TitleText}" HorizontalAlignment="Center"/>
                    <TextBlock
                        Text="Mua vào"                                 
                        Grid.Column="4"
                        Style="{StaticResource TitleText}" HorizontalAlignment="Center"/>
                    <TextBlock
                        Text="Bán ra" 
                        Grid.Column="5"                             
                        Style="{StaticResource TitleText}" Margin="20 0 0 0"/>
                    <TextBlock
                        Text="Giá trị tồn" 
                        Grid.Column="6"
                        Style="{StaticResource TitleText}" Margin="-5 0 0 0"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" BorderBrush="{DynamicResource LightBrush}"
                BorderThickness="2 0 2 2" CornerRadius="4"
                Margin="20,40,20,20">
                <StackPanel x:Name="stkWareHouse">
                    <ItemsControl ItemsSource="{Binding listItemWareHouse}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <uc:WareHouseControl/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Rectangle 
                        Fill="{DynamicResource White}" 
                        RadiusY="4" 
                        RadiusX="4"
                        Grid.RowSpan="3"
                        Panel.ZIndex="-1" />
        </Grid>
    </Grid>
</UserControl>
