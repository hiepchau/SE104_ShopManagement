<UserControl x:Class="SE104_OnlineShopManagement.Views.Pages.ManagementComponents.ImportProducts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:compo="clr-namespace:SE104_OnlineShopManagement.Components.TitleBar"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" x:Name="ucImportProducts"
             d:DesignHeight="715" d:DesignWidth="960">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Style="{StaticResource TextHeader}" Text="Nhập Kho" />
            <compo:SearhBar tbWidth="400" ToolTip="Tìm kiếm sản phẩm"
                        Title="Nhập tên sản phẩm" Width="220" Margin="20 0 0 0"/>
            <ComboBox
                            x:Name="cboSelectFast"
                            materialDesign:ComboBoxAssist.ClassicMode="True"
                            materialDesign:HintAssist.Hint="Chọn theo loại"
                            Height="45"
                            FontSize="18"
                            Width="220"
                            BorderThickness="0"
                            Padding="20,0,0,0" Margin="40 0 0 0"
                            ItemsSource="{Binding ItemSourceProductsType}"
                            SelectedItem="{Binding SelectedProductsType}"
                            DisplayMemberPath="Name"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Left"
                            FontWeight="SemiBold"
                            BorderBrush="{StaticResource Black2}" 
                            Background="{StaticResource White}">
                <!--<i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectionChangedProductsTypeCommand}"
                                                                   CommandParameter="{Binding ElementName=wdImportProducts}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>-->
            </ComboBox>
            <Button x:Name="btnImport"
                        Style="{StaticResource PaginationButton}"
                        Background="{StaticResource WordBlueBrush}"
                            
                        Width="150" Height="45" Margin="150 0">
                <TextBlock Style="{StaticResource TitleText}"> Nhập hàng</TextBlock>
            </Button>
        </StackPanel>

        <Border 
                Grid.Row="1"
                CornerRadius="4,4,0,0"
                Height="40"
                Background="{StaticResource WordBlueBrush}"
                VerticalAlignment="Top" 
                Margin="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="39.128"/>
                    <ColumnDefinition Width="158*"/>
                    <ColumnDefinition Width="143*"/>
                    <ColumnDefinition Width="108*"/>
                    <ColumnDefinition Width="151*"/>
                    <ColumnDefinition Width="111*"/>
                    <ColumnDefinition Width="128*"/>
                    <ColumnDefinition Width="90"/>

                </Grid.ColumnDefinitions>
                <CheckBox Style="{StaticResource PrimaryCheckBox}"
                          />
                <TextBlock Grid.Column="1" Style="{StaticResource TitleText}"
                           Text="Mã phiếu" Height="24" Margin="10,0,0,0" />
                <TextBlock Grid.Column="2" Style="{StaticResource TitleText}"
                           Text="Ngày nhập" Height="24" Margin="10,0,0,0" />
                <ComboBox Grid.Column="3" Style="{StaticResource MaterialDesignDataGridComboBox}"
                          Text="Người nhập"/>
                <TextBlock Grid.Column="4" Style="{StaticResource TitleText}"
                           Text="Nhà cung cấp" Height="24" Margin="10,0,0,0"/>
                <TextBlock Grid.Column="5" Style="{StaticResource TitleText}"
                           Text="Trạng thái" Height="24" Margin="10,0,0,0"/>
                <TextBlock Grid.Column="6" Style="{StaticResource TitleText}"
                           Text="Tổng tiền" Height="24" Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="{DynamicResource LightBrush}"
                BorderThickness="2 0 2 2" CornerRadius="4"
                Margin="20,40,20,20">
            <StackPanel x:Name="stkOrders" Margin="-2,0,0,0"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"
                    Margin="0 0 20 0">
            <TextBlock 
                    x:Name="txtNumOfCus"
                    Style="{StaticResource Text}"
                    Margin="0,0,20,0"
                    FontSize="14" />
            <Button 
                    x:Name="btnPrePageCus"
                    Margin="8,0"
                    ToolTip="Trang trước"
                    Style="{StaticResource PaginationButton}">
                <materialDesign:PackIcon 
                        Width="26"
                        Height="28"
                        Kind="ChevronLeft" />
            </Button>
            <Button 
                    x:Name="btnNextPageCus"
                    Margin="8,0,0,0"
                    ToolTip="Trang tiếp theo"
                    Style="{StaticResource PaginationButton}">
                <materialDesign:PackIcon 
                        Width="26"
                        Height="28"
                        Kind="ChevronRight" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
