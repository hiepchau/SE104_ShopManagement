<Window x:Class="SE104_OnlineShopManagement.Views.Windows.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE104_OnlineShopManagement.Views.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ucManagement="clr-namespace:SE104_OnlineShopManagement.Components.Pages.ManagementComponents"
        xmlns:ucCustomer="clr-namespace:SE104_OnlineShopManagement.Components.Pages.CustomersComponents"
        xmlns:ucSettings="clr-namespace:SE104_OnlineShopManagement.Components.Pages.SettingsComponents"
        xmlns:vm="clr-namespace:SE104_OnlineShopManagement.ViewModels.Authentication"
        xmlns:compo="clr-namespace:SE104_OnlineShopManagement.Components.AuthenticationWindow"
        mc:Ignorable="d"
        MinHeight="540" MinWidth="960"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Title="HomeWindow" Height="740" Width="1280">

    <Window.Resources>
        <Style x:Key="NavigationContentStyle" TargetType="ContentControl"></Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="114*"/>
                <ColumnDefinition Width="205*"/>
                <ColumnDefinition Width="960"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" MinHeight="500">
                <ListBox x:Name="NavigationMenuListBox"     
                         Style="{StaticResource NavigationListBoxStyle}"
                         ItemContainerStyle="{DynamicResource NavigationListBoxItemStyle}"
                         ItemTemplate="{DynamicResource NavigationDataTemplate}"
                         ItemsSource="{StaticResource NavigationMenuItems}">
                    <ListBox.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="1" Color="#FFAEAEAE"></DropShadowEffect>
                    </ListBox.Effect>
                </ListBox>
            </Grid>

            <Grid Grid.Column="1">
                <ListBox x:Name="NavigationFeatureMenuListBox"
                         Style="{StaticResource NavigationListBoxStyle}"
                         ItemContainerStyle="{DynamicResource NavigationListBoxItemStyle}"
                         Background="{StaticResource WordLightBlueBrush}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <!--<ListBoxItem> Tong quan </ListBoxItem>
                    <ListBoxItem> Don hang  </ListBoxItem>
                    <ListBoxItem> Hang hoa </ListBoxItem>
                    <ListBoxItem> Nhap hang </ListBoxItem>
                    <ListBoxItem>Kho hang</ListBoxItem>
                    <ListBoxItem>Khuyen mai</ListBoxItem>-->
                </ListBox>
            </Grid>
            <ucManagement:OverviewPage Grid.Column="2"></ucManagement:OverviewPage>
        </Grid>
        
    </Grid>
</Window>
