<UserControl x:Class="SE104_OnlineShopManagement.Components.Controls.InactiveTab_ProductsTypeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SE104_OnlineShopManagement.Components.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="45">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <TextBlock 
            x:Name="txtID"            
            Grid.Column="0"                                    
            Text="{Binding ID}" 
            Style="{StaticResource Text}" HorizontalAlignment="Left"/>
        <TextBlock
            x:Name="txtName"
            Grid.Column="1" 
            HorizontalAlignment="Center" 
            Text="{Binding name}"
            Style="{StaticResource Text}" />
        <TextBlock
            x:Name="txtNote"
            Grid.Column="2"             
            Text="{Binding note}"
            Style="{StaticResource Text}" HorizontalAlignment="Center" Margin="10 0 0 0"/>
    </Grid>
</UserControl>
