<UserControl x:Class="SE104_OnlineShopManagement.Components.Controls.CustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SE104_OnlineShopManagement.Components.Controls"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             mc:Ignorable="d" 
             d:DesignHeight="45">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="126.754"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="142*"/>
            <ColumnDefinition Width="97*"/>

        </Grid.ColumnDefinitions>
        <CheckBox Style="{StaticResource PrimaryCheckBox}" Height="18" Width="16"/>
        <TextBlock
                                    Text="Mã KH" 
                                    Grid.Column="1"
                                    Style="{StaticResource Text}" Height="24" Margin="10,0,0,0"/>
        <TextBlock
                                    Text="Khách hàng" 
                                    Grid.Column="2"
                                    Style="{StaticResource Text}"
                                    HorizontalAlignment="Left"
                                    Margin="20,0,0,0" Height="24" Width="96"/>
        <TextBlock
                                    Text="SĐT" 
                                    Grid.Column="3"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource Text}" Height="24" Margin="35,0,0,0" Width="32"/>
        <TextBlock
                                    Text="Lần cuối mua" 
                                    Grid.Column="4"
                                    Style="{StaticResource Text}" Height="24" Margin="10,0,1,0"/>
        <TextBlock
                                    Text="Tổng tiền" 
                                    Grid.Column="5"
                                    Style="{StaticResource Text}" Height="24" Margin="10,0,0,0"/>

    </Grid>

</UserControl>
